<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Wilhelmic_System.Views.EventRemovalDialog"
        Title="Confirm Removal" Width="300" Height="150">
	<StackPanel Margin="10">
		<TextBlock Text="Are you sure you want to delete this event?"/>
		<Button Content="Yes" HorizontalAlignment="Left" Width="100" Click="YesButton_Click"/>
		<Button Content="No" HorizontalAlignment="Right" Width="100" Click="NoButton_Click"/>
	</StackPanel>
</Window>