<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Wilhelmic_System.Views.MonthView">
	<StackPanel>
		<!-- Navigation Panel -->
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<Button x:Name="PrevMonthButton" Content="-" Width="30" Height="25"/>
			<Button x:Name="NextMonthButton" Content="+" Width="30"	Height="25"/>
		</StackPanel>

		<!-- Month View Grid -->
		<Grid x:Name="MonthViewGrid">
			<!-- Grid Definitions will be dynamically set in the Code-Behind -->
		</Grid>

		<!-- Event Panel -->
		<TextBlock x:Name="EventPanel" Padding="10" TextWrapping="Wrap"/>
	</StackPanel>
</UserControl>